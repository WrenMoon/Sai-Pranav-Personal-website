generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/saipranav_wordpress/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  featuredImage String?
  images      String[] // Array of image URLs
  tags        String[] // Array of tags
  category    String   @default("General")
  status      String   @default("published") // published, draft
  publishedAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("blog_posts")
}

model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String?
  message     String
  formType    String   @default("general") // general, speaking, collaboration, etc.
  status      String   @default("new") // new, read, replied
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("contact_submissions")
}

model Achievement {
  id          String   @id @default(cuid())
  title       String
  description String
  year        Int
  category    String   // competition, academic, leadership, etc.
  rank        String?
  participants String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("achievements")
}
